---
import '../styles/global.css';

interface Props {
	title?: string;
	description?: string;
	ogImage?: string;
	ogType?: 'website' | 'article';
	canonicalURL?: string;
	publishedDate?: string;
	modifiedDate?: string;
	author?: string;
	keywords?: string[];
}

const {
	title = "Chis - Webhook Delivery That Just Works",
	description = "Reliable webhook delivery for developers. Send once â€” we handle retries, logging, and delivery confirmation.",
	ogImage,
	ogType = 'website',
	canonicalURL,
	publishedDate,
	modifiedDate,
	author,
	keywords,
} = Astro.props;

const resolvedCanonical = canonicalURL || Astro.url.href;
const resolvedOgImage = ogImage || new URL('/og-default.png', Astro.site).href;

const structuredData = ogType === 'website' ? {
	"@context": "https://schema.org",
	"@type": "SoftwareApplication",
	"name": "Chis",
	"url": "https://trychis.com",
	"applicationCategory": "DeveloperApplication",
	"operatingSystem": "Web",
	"description": description,
	"offers": {
		"@type": "Offer",
		"price": "0",
		"priceCurrency": "USD",
		"description": "Free tier available"
	},
	"publisher": {
		"@type": "Organization",
		"name": "Chis",
		"url": "https://trychis.com",
		"logo": "https://trychis.com/logo.png"
	}
} : null;
---

<html lang="en" class="dark">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" type="image/png" href="/fav.png" />
		<meta name="description" content={description} />
		<meta name="generator" content={Astro.generator} />

		<!-- Canonical -->
		<link rel="canonical" href={resolvedCanonical} />

		<!-- Open Graph -->
		<meta property="og:type" content={ogType} />
		<meta property="og:url" content={resolvedCanonical} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={resolvedOgImage} />
		<meta property="og:site_name" content="Chis" />
		<meta property="og:locale" content="en_US" />

		<!-- Twitter Card -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content={resolvedOgImage} />

		<!-- Article meta (conditional) -->
		{publishedDate && <meta property="article:published_time" content={publishedDate} />}
		{modifiedDate && <meta property="article:modified_time" content={modifiedDate} />}
		{author && <meta property="article:author" content={author} />}

		<!-- Keywords -->
		{keywords && <meta name="keywords" content={keywords.join(', ')} />}

		<!-- Structured Data -->
		{structuredData && <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />}

		<!-- Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet" />

		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
